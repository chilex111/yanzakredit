<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools" package="com.yanzu.kredit">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:name="com.yanza.kredit.helper.Yanza"
            android:roundIcon="@mipmap/ic_launcher"
            android:supportsRtl="true"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme"
            android:configChanges="orientation|screenSize|keyboardHidden"
            tools:ignore="GoogleAppIndexingWarning">
        <activity
                android:name="com.yanza.kredit.activity.DashboardActivity"
                android:label="@string/title_activity_dashboard"
                android:windowSoftInputMode="adjustPan"
                android:theme="@style/AppTheme.NoActionBar"
                android:configChanges="screenLayout|orientation|screenSize">
        </activity>
        <activity android:name="com.yanza.kredit.activity.RegisterActivity"
                android:windowSoftInputMode="adjustPan"
                android:configChanges="screenLayout|orientation|screenSize">
        </activity>
        <activity android:name="com.yanza.kredit.activity.LoginActivity"
                android:windowSoftInputMode="adjustPan"
                android:configChanges="screenLayout|orientation|screenSize">
        </activity>
        <activity android:name="com.yanza.kredit.activity.AuthDashActivity"
                android:windowSoftInputMode="adjustPan"
                android:configChanges="screenLayout|orientation|screenSize">
        </activity>
        <activity android:name="com.yanza.kredit.activity.SplashActivity"
                android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.yanza.kredit.activity.ForgotPasswordActivity" />
    </application>

</manifest>