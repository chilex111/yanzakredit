<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.LoginActivity">

    <include layout="@layout/layout_bck" tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"/>

    <LinearLayout
            android:id="@+id/linearPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.35">
        <TextView
                style="@style/TextView"
                android:text="A code has been sent to your phone to verify your account"
                android:textColor="@color/green"
                android:layout_gravity="center"
                android:textAlignment="center"/>

        <LinearLayout
                android:id="@+id/linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="6"
                android:layout_margin="10sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

            <EditText
                    android:id="@+id/pinChar1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:gravity="center"
                    android:maxLength="1"
                    android:ems="2">
                <requestFocus/>
            </EditText>

            <EditText
                    android:id="@+id/pinChar2"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:gravity="center"
                    android:maxLength="1"
                    android:ems="2"/>

            <EditText
                    android:id="@+id/pinChar3"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:gravity="center"
                    android:maxLength="1"
                    android:ems="2"/>

            <EditText
                    android:id="@+id/pinChar4"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:gravity="center"
                    android:maxLength="1"
                    android:ems="2"/>
            <EditText
                    android:id="@+id/pinChar5"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:gravity="center"
                    android:maxLength="1"
                    android:ems="2"/>
            <EditText
                    android:id="@+id/pinChar6"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:gravity="center"
                    android:maxLength="1"
                    android:ems="2"/>
        </LinearLayout>

    </LinearLayout>
    <Button
            android:id="@+id/buttonVerifyPin"
            style="@style/Button_dark_green"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearPassword"
            android:layout_margin="20dp"
            android:text="@string/verify"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textAllCaps="false"/>

    <include layout="@layout/template_progress"/>
</androidx.constraintlayout.widget.ConstraintLayout>